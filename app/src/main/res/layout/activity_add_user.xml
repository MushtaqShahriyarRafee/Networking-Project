<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddUserActivity">

        <ImageView
            android:id="@+id/imageId"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="100sp"
            android:src="@drawable/image" />

        <EditText
            android:id="@+id/ipAddress"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/ic_power_black_24dp"
            android:hint=" Enter port-number"
            android:inputType="number"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/userNickName"
            android:drawableLeft="@drawable/ic_tag_faces_black_24dp"
            android:background="@drawable/edittext_shape"
            android:hint=" Add Nickname"
            android:inputType="textPersonName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="70dp"/>

        <Button
            android:id="@+id/setNickName"
            android:background="@drawable/edittext_shape2"
            android:text="JOIN"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">

        </Button>

</LinearLayout>